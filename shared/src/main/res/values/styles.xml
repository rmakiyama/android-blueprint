<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Text appearances -->

    <style name="TextAppearance.Article.ListItem" parent="TextAppearance.AppCompat" />

    <style name="TextAppearance.Article.ListItem.Title">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Article.ListItem.Summary">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/secondary_text_light</item>
    </style>

</resources>
